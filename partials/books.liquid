<section class="section" id="books">
  {%- for book in collections.booksAscending -%}
    <article class="item">
      <h2 class="item__title">
        {{ book.data.title }}
        {% if book.data.subtitle %}
          <p class="item__subtitle">{{ book.data.subtitle }}</p>
        {% endif %}
      </h2>

      <p>
        {{ book.data.author }} •
        <time datetime="{{ book.data.year }}">{{ book.data.year }}</time>
      </p>

      <details class="item__details">
        <summary class="item__cta">Plus d'infos</summary>
        <div class="item__inner">
          <div class="item__description">{{ book.data.description }}</div>
          <div class="item__misc">
            <p>Éditeur : {{ book.data.publisher }}</p>
            <p>{{ book.data.pages }} pages</p>
          </div>
          <a href="{{ book.data.link }}" target="_blank">Site de l'éditeur</a>
        </div>
      </details>

      <div class="item__image book {% if book.data.offset %}book--offset{% endif %}" style="
        --width: {{ book.data.width }};
        --height: {{ book.data.height }};
        --pages: {{ book.data.pages }};
        {% if book.data.color %}--cover-color: {{ book.data.color }};{% endif %}
      ">
        <div class="book__inner">
          <img class="book__cover" src="img/{{ book.fileSlug }}.jpg"/>
        </div>
      </div>
    </article>
  {%- endfor -%}
</section>
